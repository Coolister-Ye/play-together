/* components/tinode-chat-contact/index.wxss */

.contact-conatiner {
    width: 100%;
    margin-top: 10px;
}

.main-container {
    width: 100%;
    display: flex;
}

.avatar {
    margin-left: 10px;
}

.bottom-line {
    width: 100%;
    height: 5px;
    border-bottom: 1px solid rgb(218, 213, 213);
    margin-top: 2px;
    transform: scaleY(0.5);
    transform: translateX(50px);
}

.info-container {
    width: calc(100% - 75px);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-left: 10px;
}

.title-container {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
}

.other-info-container {
    display: flex;
    justify-content: space-between;
}

.preview {
    width: 50%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.preview {
    font-size: small;
    color: grey;
}

.time {
    font-size: x-small;
    color: grey;
}

.online-status {
    font-size: small;
    color: grey;
}

.van-icon__image {
    border-radius: 50%;
}