/* components/tinode-chat-wx/index.wxss */
.main-icon {
    width: 100%; 
    text-align: center;
    margin-top: 100px;
    margin-bottom: 30px;
}

.login-button-container {
    display: flex;
    justify-content: center;
}

.login-button {
    width: 100%;
    /* padding: 1px; */
}

.login-info-container {
    margin-bottom: 5px;
}
.login-switch-container {
    margin: 10px;
    font-size: x-small;
    text-align: center;
    color: rgb(0, 4, 255);
}

.node-container-left {
    width: 100%;
    display: flex;
    margin-left: 10px;
    margin-bottom: 10px;
    align-items: center;
}

.node-container-right {
    width: 100%;
    display: flex;
    margin-right: 10px;
    margin-bottom: 10px;
    align-items: center;
    flex-direction: row-reverse;
}

.avatar-container {
    margin-right: 10px;
}

.chat-content {
    padding: 10px;
    background-color: white;
    border-radius: 10%;
}

.chat-container {
    max-width: 80%;
}

.chat-user-name {
    color: grey;
    font-size: xx-small;
}

.message-view {
    width: 100%;
    height: 100%;
}

.message-container {
    width: 100%;
    margin-top: 10px;
    height: calc(100vh - 200px);
}

.input-box {
    height: 40px;
    padding-left: 20px;
    padding-right: 20px;
}