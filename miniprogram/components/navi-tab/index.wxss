/* components/navi-tab/index.wxss */

:host {
  margin-top: 10px;
  display: inline-block;
  width: 100%;
  height: auto;
}

.feeds-wrap {
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.feed-wrap {
  width: 40%;
  background-color: #eeeeee;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
}

.feeds-wrap:after {
  content:' ';
  height: 0;
  width: 40%;
  display: block;
}

.feed-image {
  width: 100%;
  height: 100rpx;
}