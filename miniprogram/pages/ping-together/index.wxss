/* miniprogram/pages/ping-together/index.wxss */
@import '../../miniprogram_npm/@vant/weapp/common/index.wxss';

.header {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  background: #134E5E;
  background: -webkit-linear-gradient(to right, #71B280, #134E5E);
  background: linear-gradient(to right, #71B280, #134E5E);
}

.round {
  border-radius: 30rpx;
}

.gap {
  margin-top: 10px;
}

.main {
  position: relative;
  top: -30rpx;
  background-color: #F6F6F6;
  padding: 15px;
  margin-bottom: 100rpx;
}

.input-form {
  padding-left: 15px;
  padding-right: 15px;
  padding-top: 3px;
  padding-bottom: 3px;
  background-color: #ffffff;
}

.header-image {
  height: 60px;
  width: 60px;
  border-radius: 30px;
  margin-left: 15px;
  border-style: solid;
  border-width: 2px;
  border-color: #ffffff;
}

.header-text {
  color: #ffffff;
  margin-left: 15px;
}

.h1 {
  font-size: 40rpx;
  font-weight: 3;
}

.h2 {
  font-size: 25rpx;
  font-weight: 2;
}

.duration-wrapper {
  margin-bottom: 15px;
  margin-left: 10px;
  margin-right: 10px;
}

.box-wrapper {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-between;
}

.box-item {
  padding: 10rpx;
  text-align: center;
  border-style: solid;
  border-radius: 10rpx;
  border-width: 1rpx;
  width: 25%;
  font-size: xx-small;
}

.deadline-info {
  padding: 10rpx;
  border-radius: 10rpx;
  font-size: xx-small;
  background-color: rgba(235, 243, 235, 0.76);
}

.deadline-wrapper {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}