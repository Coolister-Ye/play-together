/* miniprogram/pages/ping-together/index.wxss */
.header {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  background: #134E5E;
  background: -webkit-linear-gradient(to right, #71B280, #134E5E);
  background: linear-gradient(to right, #71B280, #134E5E);
}

.round {
  border-radius: 30rpx;
}

.gap {
  margin-top: 10px;
}

.main {
  position: relative;
  top: -30rpx;
  background-color: #F6F6F6;
  padding: 15px;
}

.input-form {
  padding-left: 15px;
  padding-right: 15px;
  padding-top: 3px;
  padding-bottom: 3px;
  background-color: #ffffff;
}

.header-image {
  height: 80px;
  width: 80px;
  border-radius: 40px;
  margin-left: 15px;
}

.header-text {
  font-size: smaller;
  font-weight: 3;
  margin-left: 15px;
}

.duration-wrapper {
  display: flex;
  width: 100%;
  justify-content: center;
}

.duration-item {
  border-style: solid;
  border-width:1px;
  width: 30%;
}